<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
        layout="@layout/app_bar_common"
        />

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_below="@+id/toolbar_top"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:text="REWARD PONINTS"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_weight="2.2"
          android:layout_marginTop="15dp"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_height="0dp">
          <RelativeLayout
            android:id="@+id/rl_touch"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              >
          <com.github.mikephil.charting.charts.PieChart
              android:id="@+id/pieChartView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

             android:gravity="center"

              />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"

                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/txt_points" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:gravity="center"
                      android:text="5000"/>
                  <TextView
                      android:id="@+id/txt_totalpoints" android:layout_width="match_parent"
                      android:layout_gravity="center" android:layout_height="wrap_content"
                      android:gravity="center"

                      android:layout_marginTop="5dp"
                      android:text="TOTAL POINTS"
                      android:textSize="9dp"
                      />

              </LinearLayout>
              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

android:visibility="gone"
                  android:layout_centerInParent="true"

                  android:gravity="center"
                  android:text="2500"
                  android:layout_marginBottom="10dp"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textStyle="bold" />


              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
android:visibility="gone"

                  android:layout_marginTop="80dp"
                  android:layout_below="@+id/textView1"


                  android:layout_centerHorizontal="true"
                  android:text="TOTAL POINTS"
                  android:textAppearance="?android:attr/textAppearanceSmall" />


          </RelativeLayout>
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".8"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/ln_spentpoints"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#EE5F61"
              android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="5dp"
                        android:textColor="#9C0002"
                        android:text="."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
android:gravity="center"
                        android:textSize="11dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:text="TOTAL POINTS"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"
                        android:textColor="#FFFFFF"
                        android:text="2500"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="10dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="#ffffff"
                        android:text="pts"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_availablepoints"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#CA84DA"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="5dp"
                        android:textColor="#9C0002"
                        android:text="."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="11dp" android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:text="SPENT POINTS"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"
                        android:textColor="#FFFFFF"
                        android:text="1250"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:text="pts"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_availablepointsblue"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#52B6F2"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="5dp"
                        android:textColor="#9C0002"
                        android:text="."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"

                        android:text="AVAILABLE POINTS"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"
                        android:textColor="#FFFFFF"
                        android:text="1250"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:text="pts"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"

                android:src="@drawable/reward_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".8"
                android:scaleType="fitXY"
                android:gravity="center"

                android:background="@drawable/reward_iconbutton"
                android:layout_height="0dp"
                >
                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:text="REDEEM POINTS"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="3.5">

                    <view
                        class="im.dacer.androidcharts.PieView"
                        android:id="@+id/pie_view"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        />

                </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@mipmap/spent"
                        android:text=" SPENT POINTS"
                        android:textColor="@color/red"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:text="35 POINTS"
                        android:textColor="@color/red"
                        android:textSize="18sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@mipmap/available"
                        android:text=" AVAILABLE POINTS"
                        android:textColor="@color/button_green"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:text="65 POINTS"
                        android:textColor="@color/button_green"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@mipmap/total_points"
                        android:text=" TOTAL POINTS"
                        android:textColor="@color/button_blue"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:text="100 POINTS"
                        android:textColor="@color/button_blue"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:layout_weight="2"
            android:gravity="center_horizontal|bottom"
            android:background="@mipmap/reward_bg">

            <Button
                android:id="@+id/btn_redeem"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="REDEEM POINTS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/layout_buttongreenbg"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>